{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dest",
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dest"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/__tests__"
  ]
}